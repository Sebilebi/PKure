            </ul>
            <!-- Ajustes (sección inferior) -->
            <div class="sidebar-bottom">
                <ul class="sidebar-menu">
                    <!-- Ajustes: SVG de engranaje actualizado -->
                    <li>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" width="24" height="24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.1-.644 2.31.712 1.664 1.812a1.724 1.724 0 001.065 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.644 1.1-.564 2.456-1.664 1.812a1.724 1.724 0 00-2.573 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.1.644-2.31-.712-1.664-1.812a1.724 1.724 0 00-1.065-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.644-1.1.564-2.456 1.664-1.812.996.584 2.337.07 2.573-1.065z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="main-content">
            <!-- Aquí iría el contenido principal -->
            @Body
        </div>
    </div>
</div>

<style>
    /* Contenedor principal */
    .container {
        display: flex;
        flex-direction: column;
        height: 100vh;
    }

    /* Área principal */
    .main-wrapper {
        display: flex;
        flex: 1;
        position: relative;
    }

    /* Sidebar */
    .sidebar {
        width: 70px;
        background-color: var(--color-surface);
        border-radius: 35px;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px 0;
        position: absolute;
        left: 10px;
        top: 10px;
        bottom: 10px;
        z-index: 10;
        box-shadow: var(--shadow-inner);
    }

    /* Menú de opciones: se utiliza una lista para incluir los items y se aplican estilos directamente a los SVG */
    .sidebar-menu {
        list-style: none;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 25px;
        padding: 0;
        margin: 0;
    }

        .sidebar-menu li {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            cursor: pointer;
            padding: 8px 0;
            position: relative;
        }

            .sidebar-menu li svg {
                width: 25px;
                height: 25px;
                color: var(--color-text-secondary);
                transition: color 0.3s ease;
            }

            .sidebar-menu li.active svg {
                color: var(--color-accent);
            }

            .sidebar-menu li.active::after {
                content: "";
                position: absolute;
                bottom: -10px;
                width: 10px;
                height: 10px;
                background-color: var(--color-accent);
                border-radius: 50%;
                box-shadow: 0 0 10px var(--color-accent);
            }

            .sidebar-menu li:hover svg {
                color: var(--color-text-primary);
            }

    /* Ajustes: sección inferior de la sidebar */
    .sidebar-bottom {
        margin-top: auto;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 25px;
        padding-bottom: 20px;
    }

    /* Contenido principal */
    .main-content {
        flex: 1;
        padding: 20px;
        margin-left: 90px; /* Espacio para sidebar y margen adicional */
    }
</style>
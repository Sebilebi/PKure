<style>
    .container {
        display: flex;
        flex-direction: column;
        height: 100vh;
    }

    .navbar {
        width: 100%;
        background-color: var(--color-navbar);
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
    }

    .main-wrapper {
        display: flex;
        flex: 1;
        position: relative;
    }

    .sidebar {
        width: 70px;
        background-color: var(--color-surface);
        border-radius: 35px;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px 0;
        position: absolute;
        left: 10px;
        top: 10px;
        bottom: 10px;
        z-index: 10;
        box-shadow: var(--shadow-inner);
    }

    .sidebar-icons {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 25px;
        width: 100%;
    }

    .sidebar-bottom {
        margin-top: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 25px;
        padding-bottom: 20px;
    }

    .sidebar-item {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        cursor: pointer;
        padding: 8px 0;
    }

    .sidebar-icon {
        width: 25px;
        height: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-text-secondary);
        transition: color 0.3s ease;
    }

    .sidebar-item.active .sidebar-icon {
        color: var(--color-accent);
    }

    .sidebar-item.active::after {
        content: "";
        position: absolute;
        bottom: -10px;
        width: 10px;
        height: 10px;
        background-color: var(--color-accent);
        border-radius: 50%;
        box-shadow: 0 0 10px var(--color-accent);
    }

    .sidebar-item.active::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0.2;
        z-index: -1;
    }

    .sidebar-item:hover .sidebar-icon {
        color: var(--color-text-primary);
    }

    .user-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background-color: var(--color-border);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        cursor: pointer;
    }

    .main-content {
        flex: 1;
        padding: 20px;
        margin-left: 90px; /* Space for sidebar plus extra padding */
    }

    .logo {
        font-weight: bold;
        font-size: 24px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .search-bar {
        background-color: var(--color-search-bar);
        border-radius: 20px;
        padding: 8px 15px;
        display: flex;
        align-items: center;
        width: 320px;
        box-shadow: var(--shadow-inner);
    }

        .search-bar input {
            background: transparent;
            border: none;
            color: var(--color-text-primary);
            width: 100%;
            padding-left: 10px;
            outline: none;
        }

    .search-icon {
        color: var(--color-text-secondary);
    }

    .actions {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .notification {
        position: relative;
        cursor: pointer;
    }

    .notification-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        width: 10px;
        height: 10px;
        background-color: var(--color-accent);
        border-radius: 50%;
        box-shadow: 0 0 10px var(--color-accent);
    }
</style>
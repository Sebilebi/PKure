@using PKure.Models
<div @onclick="HandleClick" class="poke-card @(IsSelected ? "selected" : "")">
    <img src="@Pokemon.ImageUrl" alt="@Pokemon.SpeciesDetails.GetLocalizedName()" />
    <h3>@Pokemon.SpeciesDetails.GetLocalizedName()</h3>
    <p>Tipo: @string.Join(", ", Pokemon.Types.Select(t => t.Details.GetLocalizedName()))</p>
</div>

@code {
    [Parameter]
    public Pokemon Pokemon { get; set; }

    [Parameter]
    public EventCallback<Pokemon> OnClick { get; set; }

    [Parameter]
    public bool IsSelected { get; set; }

    private async Task HandleClick()
    {
        await OnClick.InvokeAsync(Pokemon);
    }
}
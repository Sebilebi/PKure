@using PKure.Models.ViewModel

<div @onclick="HandleClick" class="poke-card @(IsSelected ? "selected" : "")">
    <img src="@Pokemon.ImageUrl" alt="@Pokemon.Name" />
    <h3>@Pokemon.Name</h3>
    <p>Tipo: @Pokemon.Type</p>
</div>

@code {
    [Parameter]
    public PokemonViewModel Pokemon { get; set; }

    [Parameter]
    public EventCallback<PokemonViewModel> OnClick { get; set; }

    [Parameter]
    public bool IsSelected { get; set; }

    private async Task HandleClick()
    {
        await OnClick.InvokeAsync(Pokemon);
    }
}
